            <jp.co.cybird.barcodekanojoForGAM.view.EditItemView android:id="@+id/scan_others_3_product_name" android:background="@drawable/row_kanojo_edit_bg_middle" android:layout_width="match_parent" android:layout_height="@dimen/row_kanojo_edit_txt_height" EditItemView:key="@string/common_product_name" EditItemView:textColor="@color/editable_color"/>
            <jp.co.cybird.barcodekanojoForGAM.view.EditItemView android:id="@+id/scan_others_4_category" android:background="@drawable/row_kanojo_edit_bg_middle" android:layout_width="match_parent" android:layout_height="@dimen/row_kanojo_edit_txt_height" EditItemView:key="@string/common_product_category" EditItemView:textColor="@color/editable_color"/>
            <jp.co.cybird.barcodekanojoForGAM.view.EditItemView android:id="@+id/scan_others_5_barcode" android:background="@drawable/row_kanojo_edit_bg_middle" android:layout_width="match_parent" android:layout_height="@dimen/row_kanojo_edit_txt_height" EditItemView:key="@string/common_product_barcode"/>
            <jp.co.cybird.barcodekanojoForGAM.view.EditItemView android:id="@+id/scan_others_6_country" android:background="@drawable/row_kanojo_edit_bg_middle" android:layout_width="match_parent" android:layout_height="@dimen/row_kanojo_edit_txt_height" EditItemView:key="@string/common_product_country"/>
            <jp.co.cybird.barcodekanojoForGAM.view.EditItemView android:id="@+id/scan_others_7_location" android:background="@drawable/row_kanojo_edit_bg_middle" android:layout_width="match_parent" android:layout_height="@dimen/row_kanojo_edit_txt_height" EditItemView:key="@string/common_product_location"/>
            <jp.co.cybird.barcodekanojoForGAM.view.EditItemView android:id="@+id/scan_others_8_photo" android:background="@drawable/row_kanojo_edit_bg_bottom" android:layout_width="match_parent" android:layout_height="@dimen/row_kanojo_edit_txt_height" EditItemView:key="@string/common_product_photo"/>
            <jp.co.cybird.barcodekanojoForGAM.view.EditItemView android:id="@+id/scan_others_9_comment" android:background="@drawable/row_kanojo_edit_bg_name" android:layout_width="match_parent" android:layout_height="@dimen/row_kanojo_edit_txt_height" android:layout_marginTop="@dimen/row_kanojo_edit_separator_height" EditItemView:key="@string/common_product_comment" EditItemView:textColor="@color/editable_color"/>
            <TextView android:layout_marginTop="8dp" android:text="@string/notice_input" style="@style/txt_notice_input"/>
            <Button android:id="@+id/scan_others_btn_save" android:layout_marginTop="@dimen/row_kanojo_edit_separator_height" android:layout_marginBottom="@dimen/row_kanojo_edit_separator_height" android:text="@string/kanojo_edit_save" style="@style/btn_default"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
