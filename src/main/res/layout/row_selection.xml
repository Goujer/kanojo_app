<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:background="@drawable/common_sectionheaderbg" android:layout_width="match_parent" android:layout_height="@dimen/row_selection_height">
        <TextView
			android:id="@+id/row_selection_title"
			style="@style/txt_section_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" />
        <TextView
			android:id="@+id/row_selection_number"
			style="@style/txt_section_digit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" />
    </LinearLayout>
</FrameLayout>
