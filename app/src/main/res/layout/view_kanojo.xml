<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

	<ImageView
		android:id="@+id/view_kanojo_img"
		android:layout_width="@dimen/row_kanojos_img_width"
		android:layout_height="@dimen/row_kanojos_img_height"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_marginStart="4dp"
		android:layout_marginLeft="4dp"
		android:layout_marginTop="4dp"
		android:adjustViewBounds="true"
		android:scaleType="fitXY"
		android:src="@drawable/common_noimage"/>

    <ImageView
		android:id="@+id/view_kanojo_img_cover"
		android:layout_width="@dimen/row_kanojos_img_width"
		android:layout_height="@dimen/row_kanojos_img_height"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_marginStart="4dp"
		android:layout_marginLeft="4dp"
		android:layout_marginTop="4dp"
		android:adjustViewBounds="true"
		android:scaleType="fitXY"
		android:src="@drawable/row_kanojos_img_cover"/>

	<ProgressBar
		android:id="@+id/view_kanojo_bar"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="@dimen/row_kanojos_bar_width"
		android:layout_height="@dimen/row_kanojos_bar_height"
		android:layout_centerVertical="true"
		android:layout_marginStart="6dp"
		android:layout_marginLeft="6dp"
		android:layout_marginEnd="4dp"
		android:layout_marginRight="4dp"
		android:layout_toEndOf="@+id/view_kanojo_img"
		android:layout_toRightOf="@+id/view_kanojo_img"
		android:max="100"
		android:progressDrawable="@drawable/progress_bar_blue"/>

	<ImageView
		android:id="@+id/view_kanojo_bar_cover"
		android:layout_width="@dimen/row_kanojos_bar_width"
		android:layout_height="@dimen/row_kanojos_bar_height"
		android:layout_centerVertical="true"
		android:layout_marginStart="6dp"
		android:layout_marginLeft="6dp"
		android:layout_marginEnd="4dp"
		android:layout_marginRight="4dp"
		android:layout_toEndOf="@+id/view_kanojo_img"
		android:layout_toRightOf="@+id/view_kanojo_img"
		android:scaleType="fitXY"
		android:src="@drawable/row_kanojos_bar_cover"/>

	<TextView
		android:id="@+id/view_kanojo_name"
		style="@style/txt_kanojos_name"
		android:layout_above="@+id/view_kanojo_bar"
		android:layout_marginLeft="6dp"
		android:layout_marginBottom="3dp"
		android:layout_toRightOf="@+id/view_kanojo_img"
		android:ellipsize="end"
		android:singleLine="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="6dp"
		android:layout_toEndOf="@+id/view_kanojo_img"/>

	<ImageView
		android:id="@+id/view_kanojo_rate"
		android:layout_width="@dimen/row_kanojos_rate_width"
		android:layout_height="@dimen/row_kanojos_rate_height"
		android:layout_below="@+id/view_kanojo_bar"
		android:layout_marginStart="6dp"
		android:layout_marginLeft="6dp"
		android:layout_marginTop="3dp"
		android:layout_toEndOf="@+id/view_kanojo_img"
		android:layout_toRightOf="@+id/view_kanojo_img"
		android:adjustViewBounds="true"
		android:scaleType="fitXY"
		android:src="@drawable/row_kanojos_star0"/>

    <View
		android:id="@+id/view_kanojo_cover"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/default_bg"
		android:visibility="invisible"/>
</merge>
