<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <gradient android:startColor="#222222" android:endColor="#bbbbbb" android:angle="270" android:type="linear"/>
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <gradient android:startColor="#bbbbbb" android:endColor="#000000" android:angle="270" android:type="linear"/>
        </shape>
    </item>
</layer-list>
